@model RegisterViewModel

@{
    ViewBag.Title = "User Registration";
}


<div class="container">
    <form asp-controller="Account" asp-action="Register" method="Post">
        <div asp-validation-summary="All" class="text text-danger"></div>
        <div class="form-group">
            <label asp-for="Email" class="col-form-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="col-form-label"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword" class="col-form-label"></label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text text-danger"></span>
        </div>

        <br />
        <input class="btn btn-primary" type="submit" value="Register" />
               
    </form>
 </div>
