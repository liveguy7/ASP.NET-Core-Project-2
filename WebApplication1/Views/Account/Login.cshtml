@model LoginViewModel


@{
    ViewBag.Title = "User Login";

}

<div class="container">
    <h1>User Login</h1>
    <form asp-controller="Account" asp-action="Login" method="Post">
        <div asp-validation-summary="All" class="text text-danger"></div>
        <div class="form-group">
            <label asp-for="Email" class="col-form-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="col-form-label"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text text-danger"></span>
        </div>

        <div class="form-group">
            <div class="checkbox">
            <label asp-for="RememberMe">
            <input asp-for="RememberMe" />
                @Html.DisplayNameFor( m =>
                    m.RememberMe)
            </label>
            </div>
        </div>

        <br />
        <input class="btn btn-primary" type="submit" value="Login" />

    </form>
</div>

